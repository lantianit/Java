<view class="container">
  <view class="header">
    <text class="title">观看历史记录</text>
  </view>
  <scroll-view scroll-y class="history-list">
    <block wx:for="{{videoHistory}}" wx:key="videoId">
      <navigator url="/pages/videoPage/index?videoId={{item.videoId}}" class="history-item">
        <text class="video-title">{{item.title}}</text>
        <text class="watch-time">观看时间：{{item.startTime}}</text>
      </navigator>
    </block>
  </scroll-view>
</view> 