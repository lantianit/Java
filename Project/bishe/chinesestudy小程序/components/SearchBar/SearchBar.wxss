/* components/SearchBar/SearchBar.wxss */
.search_bar {
  height: 80rpx;
  padding: 0;
  background-color: var(--themeColor);
}
.search_bar navigator {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 20rpx;
  color: #666;
  flex: 1;
  margin: 0 10rpx;
}
.search_bar navigator icon {
  padding-right: 5rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  margin: 20rpx;
  padding: 10rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.search-input {
  flex: 1;
  padding: 10rpx;
  border: none;
  border-radius: 5rpx;
  background-color: #fff;
  font-size: 16px;
  color: #333;
}

.search-button {
  margin-left: 10rpx;
  padding: 10rpx 20rpx;
  background-color: #9C6B30;
  color: white;
  border: none;
  border-radius: 5rpx;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.search-button:hover {
  background-color: #9C6B30;
}
